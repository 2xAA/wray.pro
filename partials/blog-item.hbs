<article class="pure-u-1-1 blog-item-preview">
	<div class="pure-g">
		<div class="pure-u-1-1">
			<h1>
				<a href="/{{blog-item.path}}">
					{{{blog-item.title}}}
				</a>
			</h1>
		</div>
		<div class="pure-u-1-1 excerpt">
			<p>
				{{{getTextFromHtmlString blog-item.excerpt}}}
			</p>
		</div>
		<div class="pure-u-1-3 pure-u-sm-1-4 pure-u-md-1-6 meta">
			<p>
			<i class="fa fa-calendar-o" aria-hidden="true"></i> {{{blogDateFormat blog-item.date}}}
			</p>
		</div>
		<div class="pure-u-1-3 pure-u-sm-1-6 meta">
			<p>
				<i class="fa fa-clock-o" aria-hidden="true"></i> {{{blog-item.readingTime}}}
			</p>
		</div>
	</div>
</article>